<%- layout("/layouts/boilerplate.ejs") %>
<div class="row show-page mt-5">
  <div class="show-listing">
    <div class="card listing-card col-6 show-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="Listing-Image"
      />
    </div>
    <div class="show-title">
      <h2><b><%= listing.title %></b></h2>
      <div class="card-body card-body-show">
        <p class="card-text mt-3">
          Owned by : <b><i><%= listing.owner.username %></i></b>
        </p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
        <hr />
      </div>
      <a href="/booking" > 
        <button class="btn btn-dark col-1 edit-btn-1 book">Book Now</button>
      </a>
      
    </div>
  </div>

  <div class="show-content">
    <div class="btns mb-5">
      

      <a href="/listings" class="btn btn-dark col-1 edit-btn back">Back </a
      >&nbsp;&nbsp; <% if(currUser && listing.owner._id.equals(currUser._id)){%>

      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark col-1 edit-btn mb-2"
      >
        Edit
      </a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark deletebtn">Delete</button>
      </form>
      <% } %>
    </div>
    <div class="col-8 mt-3 mb-3 reviews">
      <% if(currUser){%>
      <h4>Leave a Review</h4>
      <br />
      <hr />
      <form
        action="/listings/<%= listing._id%>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3 rating ">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-growRotate">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            class="form-control"
            cols="30"
            rows="5"
            required
          ></textarea>
          <div class="invalid-feedback">Please add comment for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />

      <%}%>

  <div class="row"></div>
      <p><b>All Reviews</b></p>
      <div class="row review-class">
        <% for(review of listing.reviews){%>
        <div class="card col-5 mb-3 ms-3">
          <div class="card-body">
            <h5 class="card-title mt-3">@<%= review.author.username %></h5>
            <p
              class="starability-result card-text mb-3"
              data-rating="<%= review.rating%>"
            ></p>
            <p class="card-text mb-3"><%= review.comment%></p>
          </div>
          <form
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            class="mb-3"
            method="POST"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        </div>

        <% } %>
      </div>
    </div>
      
  </div>
</div>

