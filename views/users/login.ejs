<%- layout("./layouts/boilerplate.ejs") %>
<div class="row mt-3 login-form">
  <div class="col-6 offset-3 mt-3 mb-3 login-head">
    <h1>Login</h1>
  </div>

  <div class="col-6 offset-3">
    <form
      action="/login"
      method="POST"
      class="needs-validation mt-3 mb-3 user-loginfo"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success login-button">Login</button>
    </form>
  </div>
</div>
